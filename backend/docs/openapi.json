{
  "openapi": "3.0.3",
  "info": {
    "title": "Pulse ID Backend API",
    "version": "1.1.0",
    "description": "API REST versionada para autenticação, sessão, gestão de conta, recuperação de senha e auditoria."
  },
  "servers": [
    {
      "url": "http://localhost:3333",
      "description": "Ambiente local"
    }
  ],
  "tags": [
    { "name": "Health" },
    { "name": "Auth" },
    { "name": "Admin" }
  ],
  "paths": {
    "/api/v1/health": {
      "get": {
        "tags": ["Health"],
        "summary": "Health check da API",
        "responses": {
          "200": { "description": "API saudável" }
        }
      }
    },
    "/api/v1/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Registrar novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RegisterRequest" }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuário registrado" },
          "409": { "description": "Conflito de e-mail" }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Autenticar usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/LoginRequest" }
            }
          }
        },
        "responses": {
          "200": { "description": "Login concluído" },
          "401": { "description": "Credenciais inválidas" },
          "423": { "description": "Conta bloqueada" }
        }
      }
    },
    "/api/v1/auth/refresh": {
      "post": {
        "tags": ["Auth"],
        "summary": "Rotacionar refresh token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RefreshRequest" }
            }
          }
        },
        "responses": {
          "200": { "description": "Novo par de tokens" },
          "401": { "description": "Refresh token inválido" }
        }
      }
    },
    "/api/v1/auth/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "Invalidar sessão",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RefreshRequest" }
            }
          }
        },
        "responses": {
          "200": { "description": "Logout concluído" }
        }
      }
    },
    "/api/v1/auth/forgot-password": {
      "post": {
        "tags": ["Auth"],
        "summary": "Solicitar reset de senha",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ForgotPasswordRequest" }
            }
          }
        },
        "responses": {
          "202": { "description": "Solicitação aceita" }
        }
      }
    },
    "/api/v1/auth/reset-password": {
      "post": {
        "tags": ["Auth"],
        "summary": "Redefinir senha",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ResetPasswordRequest" }
            }
          }
        },
        "responses": {
          "200": { "description": "Senha atualizada" },
          "401": { "description": "Token inválido ou expirado" }
        }
      }
    },
    "/api/v1/auth/me": {
      "get": {
        "tags": ["Auth"],
        "summary": "Perfil autenticado",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Usuário autenticado" },
          "401": { "description": "Não autenticado" }
        }
      }
    },
    "/api/v1/auth/profile": {
      "patch": {
        "tags": ["Auth"],
        "summary": "Atualizar perfil do usuário autenticado",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ProfileUpdateRequest" }
            }
          }
        },
        "responses": {
          "200": { "description": "Perfil atualizado" }
        }
      }
    },
    "/api/v1/auth/change-password": {
      "post": {
        "tags": ["Auth"],
        "summary": "Alterar senha do usuário autenticado",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ChangePasswordRequest" }
            }
          }
        },
        "responses": {
          "200": { "description": "Senha alterada" },
          "401": { "description": "Senha atual inválida" }
        }
      }
    },
    "/api/v1/auth/sessions": {
      "get": {
        "tags": ["Auth"],
        "summary": "Listar sessões ativas do usuário autenticado",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Sessões listadas" }
        }
      },
      "delete": {
        "tags": ["Auth"],
        "summary": "Revogar todas as sessões do usuário autenticado",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Sessões encerradas" }
        }
      }
    },
    "/api/v1/auth/sessions/{sessionId}": {
      "delete": {
        "tags": ["Auth"],
        "summary": "Revogar sessão específica",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "sessionId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Sessão revogada" },
          "404": { "description": "Sessão não encontrada" }
        }
      }
    },
    "/api/v1/auth/metrics": {
      "get": {
        "tags": ["Auth"],
        "summary": "Métricas de autenticação (admin)",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Métricas retornadas" },
          "403": { "description": "Sem permissão" }
        }
      }
    },
    "/api/v1/admin/audit-logs": {
      "get": {
        "tags": ["Admin"],
        "summary": "Listar trilha de auditoria",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "limit", "in": "query", "schema": { "type": "integer" } },
          { "name": "type", "in": "query", "schema": { "type": "string" } },
          { "name": "userId", "in": "query", "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Logs de auditoria" },
          "403": { "description": "Sem permissão" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "RegisterRequest": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "name": { "type": "string", "example": "Matheus Siqueira" },
          "email": { "type": "string", "format": "email", "example": "matheus@email.com" },
          "password": { "type": "string", "example": "Senha@123" }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string" }
        }
      },
      "RefreshRequest": {
        "type": "object",
        "required": ["refreshToken"],
        "properties": {
          "refreshToken": { "type": "string" }
        }
      },
      "ForgotPasswordRequest": {
        "type": "object",
        "required": ["email"],
        "properties": {
          "email": { "type": "string", "format": "email" }
        }
      },
      "ResetPasswordRequest": {
        "type": "object",
        "required": ["token", "newPassword"],
        "properties": {
          "token": { "type": "string" },
          "newPassword": { "type": "string" }
        }
      },
      "ProfileUpdateRequest": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string", "example": "Matheus Siqueira" }
        }
      },
      "ChangePasswordRequest": {
        "type": "object",
        "required": ["currentPassword", "newPassword"],
        "properties": {
          "currentPassword": { "type": "string" },
          "newPassword": { "type": "string" }
        }
      }
    }
  }
}
